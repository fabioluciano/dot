### General Options
set-option -gq utf8
set-option -g visual-activity on
set-option -g status-position bottom
set-option -g base-index 1
set-option -g renumber-windows on
{{- if eq .chezmoi.os "linux" }}
set-option -g default-terminal "tmux-256color"
set-option -ag terminal-overrides ",xterm-256color:RGB"
{{- end }}
set-option -sg escape-time 0
set-option -sg repeat-time 0
set-option -gq mouse-utf8 on
set-option -g mouse on
set-option -g prefix C-a
set-option -g visual-activity off
set-option -g set-titles on

### Window Options
set-window-option -g monitor-activity on
set-window-option -g automatic-rename on
set-window-option -g pane-base-index 1
set-window-option -g mouse on
set-window-option -gq utf8 on

### Key Bindings 
unbind-key C-b
bind C-a send-prefix
bind r source-file ~/.tmux.conf \; display "TMUX configuration is reloaded!"
bind c new-window -c '#{pane_current_path}'
bind T swap-window -t 1

bind "Escape" copy-mode
bind-key -T root DoubleClick1Pane  select-pane \; copy-mode \; send-keys -X select-word

### Plugins
set -g @plugin 'tmux-plugins/tpm'

set -g @plugin 'b0o/tmux-autoreload'
set -g @plugin 'sainnhe/tmux-fzf'
set -g @plugin 'tmux-plugins/tmux-pain-control'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'Alkindi42/tmux-bitwarden'
set -g @plugin 'laktak/extrakto'
set -g @plugin 'roosta/tmux-pop'
set -g @plugin 'nhdaly/tmux-better-mouse-mode'

set -g @plugin 'dracula/tmux'


### Plugins Options

#### Dracula Theme Options
{{ if eq .chezmoi.os "linux" }}
set -g @dracula-plugins "cpu-usage gpu-usage ram-usage"
{{ else if eq .chezmoi.os "darwin" }}
set -g @dracula-plugins "cpu-usage ram-usage"
{{ end }}
set -g @dracula-show-powerline true
set -g @dracula-show-flags true
set -g @dracula-show-left-icon session

### Bitwarden Options
set -g @bw-key 'T'
set -g @bw-copy-to-clipboard 'on'

set -g @extrakto_popup_size 70%


{{ if eq .chezmoi.os "linux" }}
run '/usr/share/tmux-plugin-manager/tpm'
{{ else if eq .chezmoi.os "darwin" }}
run '~/.tmux/plugins/tpm/tpm'
{{ end }}

