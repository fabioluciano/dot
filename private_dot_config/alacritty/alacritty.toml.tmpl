# Alacritty Configuration (TOML format for v0.13+)
# https://alacritty.org/config-alacritty.html

[general]
live_config_reload = true

[env]
TERM = "xterm-256color"

[window]
title = "Alacritty Terminal"
dynamic_title = true
decorations = "full"
startup_mode = "Windowed"
dynamic_padding = false
opacity = 1

[window.dimensions]
columns = 100
lines = 30



[window.padding]
x = 0
y = 0

[scrolling]
history = 10000
multiplier = 3

[font]
{{- if eq .chezmoi.os "linux" }}
size = 13.0

# Ghostty: Ajuste de altura da célula (não suportado diretamente no Alacritty)
{{- else if eq .chezmoi.os "darwin" }}

# Ghostty: Font features (não suportado diretamente, mas pode ser configurado via fontconfig)
size = 18.0

# Ghostty: bold-is-bright = true (Alacritty já trata cores bright)

# Ghostty: Window padding balance, inherit working directory/font size, window decoration/save state
{{- end }}

[font.normal]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"

# Ghostty: Confirm close, resize overlay
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"

# Ghostty: macOS titlebar style e sombra (não suportado diretamente)
{{- end }}
style = "Regular"

# Ghostty: Cursor click to move (não suportado)


# Ghostty: mouse-hide-while-typing
[font.bold]
{{- if eq .chezmoi.os "linux" }}

# Ghostty: shell-integration (não há integração direta, mas shell customizado já está configurado)

# Ghostty: link-url (Alacritty já detecta links por padrão)

# Ghostty: clipboard-trim-trailing-spaces (não suportado)
family = "CaskaydiaCove Nerd Font Mono"

# Ghostty: copy-on-select
{{- else if eq .chezmoi.os "darwin" }}

# Ghostty: click-repeat-interval (não suportado)
family = "CaskaydiaCove Nerd Font Mono"

# Ghostty: auto-update (não aplicável)
{{- end }}
style = "Bold"

# Ghostty: quit-after-last-window-closed (não suportado)

[font.italic]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- end }}
style = "Italic"

[font.bold_italic]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- end }}
style = "Bold Italic"

[font.offset]
x = 0
y = 10

[font.glyph_offset]
x = 0
y = 10

# Tokyo Night theme colors
[colors.primary]
background = "#1a1b26"
foreground = "#c0caf5"

[colors.normal]
black = "#414868"
red = "#f7768e"
green = "#9ece6a"
yellow = "#e0af68"
blue = "#7aa2f7"
magenta = "#bb9af7"
cyan = "#7dcfff"
white = "#a9b1d6"

[colors.bright]
black = "#414868"
red = "#f7768e"
green = "#9ece6a"
yellow = "#e0af68"
blue = "#7aa2f7"
magenta = "#bb9af7"
cyan = "#7dcfff"
white = "#c0caf5"

[selection]
save_to_clipboard = true

[cursor]
unfocused_hollow = true

[cursor.style]
shape = "Block"
blinking = "On"

[terminal]
{{- if eq .chezmoi.os "linux" }}
shell = { program = "/usr/bin/zsh", args = ["--login", "-c", "tmuxp load ~/.config/tmuxp/tmuxp.yml"] }
{{- else if eq .chezmoi.os "darwin" }}
shell = { program = "/bin/zsh", args = ["--login", "-c", "if tmux has-session 2>/dev/null; then tmux attach; else tmuxp load ~/.config/tmuxp/tmuxp.yml; fi"] }
{{- end }}

[[keyboard.bindings]]
key = "Right"
mods = "Alt"
chars = "\u001BF"

[[keyboard.bindings]]
key = "Left"
mods = "Alt"
chars = "\u001BB"

[[keyboard.bindings]]
key = "F11"
action = "ToggleFullscreen"

[[keyboard.bindings]]
key = "N"
mods = "Control|Shift"
action = "SpawnNewInstance"

[[keyboard.bindings]]
key = "V"
mods = "Control|Shift"
action = "Paste"

[[keyboard.bindings]]
key = "C"
mods = "Control|Shift"
action = "Copy"
