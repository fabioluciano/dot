# Alacritty Configuration (TOML format for v0.13+)
# https://alacritty.org/config-alacritty.html

[general]
live_config_reload = true

[env]
TERM = "xterm-256color"

[window]
title = "Alacritty Terminal"
dynamic_title = true
decorations = "full"
startup_mode = "Windowed"
dynamic_padding = false
opacity = 1

[window.dimensions]
columns = 100
lines = 30

[window.padding]
x = 0
y = 0

[scrolling]
history = 10000
multiplier = 3

[font]
{{- if eq .chezmoi.os "linux" }}
size = 13.0
{{- else if eq .chezmoi.os "darwin" }}
size = 18.0
{{- end }}

[font.normal]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- end }}
style = "Regular"

[font.bold]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- end }}
style = "Bold"

[font.italic]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- end }}
style = "Italic"

[font.bold_italic]
{{- if eq .chezmoi.os "linux" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- else if eq .chezmoi.os "darwin" }}
family = "CaskaydiaCove Nerd Font Mono"
{{- end }}
style = "Bold Italic"

[font.offset]
x = 0
y = 0

# Tokyo Night theme colors
[colors.primary]
background = "#1a1b26"
foreground = "#c0caf5"

[colors.normal]
black = "#414868"
red = "#f7768e"
green = "#9ece6a"
yellow = "#e0af68"
blue = "#7aa2f7"
magenta = "#bb9af7"
cyan = "#7dcfff"
white = "#a9b1d6"

[colors.bright]
black = "#414868"
red = "#f7768e"
green = "#9ece6a"
yellow = "#e0af68"
blue = "#7aa2f7"
magenta = "#bb9af7"
cyan = "#7dcfff"
white = "#c0caf5"

[selection]
save_to_clipboard = true

[cursor]
unfocused_hollow = true

[cursor.style]
shape = "Block"
blinking = "On"

[terminal]
{{- if eq .chezmoi.os "linux" }}
shell = { program = "/usr/bin/zsh", args = ["--login", "-c", "tmuxp load ~/.config/tmuxp/tmuxp.yml"] }
{{- else if eq .chezmoi.os "darwin" }}
shell = { program = "/bin/zsh", args = ["--login", "-c", "if tmux has-session 2>/dev/null; then tmux attach; else tmuxp load ~/.config/tmuxp/tmuxp.yml; fi"] }
{{- end }}

[[keyboard.bindings]]
key = "Right"
mods = "Alt"
chars = "\u001BF"

[[keyboard.bindings]]
key = "Left"
mods = "Alt"
chars = "\u001BB"

[[keyboard.bindings]]
key = "F11"
action = "ToggleFullscreen"

[[keyboard.bindings]]
key = "N"
mods = "Control|Shift"
action = "SpawnNewInstance"

[[keyboard.bindings]]
key = "V"
mods = "Control|Shift"
action = "Paste"

[[keyboard.bindings]]
key = "C"
mods = "Control|Shift"
action = "Copy"
