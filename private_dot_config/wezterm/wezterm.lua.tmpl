  font_size = 15.0,
{{- else if eq .chezmoi.os "darwin" }}
  default_prog = { '/bin/zsh', '--login', '-c', '/opt/homebrew/bin/tmuxp load ~/.config/tmuxp/tmuxp.yml' },
  font_size = 17.0,
{{- end }}
  line_height = 1.3,
  window_background_opacity = 1.0,
  enable_tab_bar = false,
  color_scheme = "tokyonight",
  window_padding = {
    left = 0,
    right = 0,
    top = 0,
    bottom = 0,
  },
}
