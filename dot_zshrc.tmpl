{{- if eq .chezmoi.os "linux" }}
source /usr/share/zsh/scripts/zplug/init.zsh
{{- else if eq .chezmoi.os "darwin" }}
source /opt/homebrew/opt/zplug/init.zsh
{{- end }}

zplug 'zplug/zplug', hook-build:'zplug --self-manage'

zplug "chrissicool/zsh-256color"

zplug "modules/completion", from:prezto


zplug "ohmyzsh/ohmyzsh", use:"lib/key-bindings.zsh"
zplug "ohmyzsh/ohmyzsh", use:"lib/clipboard.zsh"

zplug "Aloxaf/fzf-tab"
zplug 'zsh-users/zsh-autosuggestions' 
zplug 'zsh-users/zsh-syntax-highlighting', defer:3
zplug 'zsh-users/zsh-history-substring-search', defer:3
zplug 'zsh-users/zsh-completions', depth:1

zplug "plugins/aws",   from:oh-my-zsh
zplug "plugins/git",   from:oh-my-zsh
zplug "MichaelAquilina/zsh-you-should-use"
zplug "junegunn/fzf", use:shell/key-bindings.zsh

zplug "mafredri/zsh-async", from:github

if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    else
        echo
    fi
fi
zplug load

EDITOR=nvim
HISTFILE=~/.zsh_history
HISTSIZE=1000000
SAVEHIST=1000000

fpath+=~/.zfunc

{{- if eq .chezmoi.os "linux" }}
source /usr/share/fzf/completion.zsh
source /usr/share/fzf/key-bindings.zsh
{{- end }}

export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8


zstyle ':completion:*:git-checkout:*' sort false
zstyle ':completion:*:descriptions' format '[%d]'
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*' menu no
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'eza -1 --color=always $realpath'
zstyle ':fzf-tab:*' switch-group '<' '>'
zstyle ':fzf-tab:*' fzf-command ftb-tmux-popup

export PATH="${PATH}:${HOME}/.krew/bin:${HOME}/.local/bin"
export FZF_TMUX_OPTS="-p"
export FZF_CTRL_R_OPTS="--reverse --preview 'echo {}' --preview-window down:30:hidden:wrap --bind '?:toggle-preview'"

eval "$(direnv hook zsh)"
eval "$(zoxide init zsh)"
eval "$(starship init zsh)"
eval "$(mise activate zsh)"

if type brew &>/dev/null
then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"

  autoload -Uz compinit
  compinit
fi

alias du="ncdu --color dark"
alias ls='eza --icons --git'
alias ll='eza -l --icons --git'
alias l='ll'
alias cd='z'
alias cat='bat'
alias df='duf'
alias k='kubectl'
alias kn='kubectl ns'
alias kx='kubectl ctx'
alias vim='nvim'
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
gpgconf --launch gpg-agent

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
